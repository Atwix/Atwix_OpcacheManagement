<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="left">
            <block class="Glushko\OpcacheManagement\Block\Adminhtml\Management\Index\Tabs" name="theme_edit_tabs">
                <block class="Glushko\OpcacheManagement\Block\Adminhtml\Management\Index\Tab\CachedScriptsTab" name="glushko.opcache_management.tab.cached_scripts">
                    <block class="Glushko\OpcacheManagement\Block\Adminhtml\Management\Index\Tab\CachedScripts\CachedScriptsGrid" name="glushko.opcache_management.tab.cached_scripts.grid" />
                </block>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general_tab</argument>
                    <argument name="block" xsi:type="string">Glushko\OpcacheManagement\Block\Adminhtml\Management\Index\Tab\General</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">memory_usage_tab</argument>
                    <argument name="block" xsi:type="string">Glushko\OpcacheManagement\Block\Adminhtml\Management\Index\Tab\MemoryUsageTab</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">statistics_tab</argument>
                    <argument name="block" xsi:type="string">Glushko\OpcacheManagement\Block\Adminhtml\Management\Index\Tab\StatisticsTab</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">cached_scripts_tab</argument>
                    <argument name="block" xsi:type="string">glushko.opcache_management.tab.cached_scripts</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">directives_tab</argument>
                    <argument name="block" xsi:type="string">Glushko\OpcacheManagement\Block\Adminhtml\Management\Index\Tab\DirectivesTab</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Glushko\OpcacheManagement\Block\Adminhtml\Management\Index" name="glushko.opcache_management.content" template="Glushko_OpcacheManagement::widget/no_form_container.phtml"/>
        </referenceContainer>
    </body>
</page>
